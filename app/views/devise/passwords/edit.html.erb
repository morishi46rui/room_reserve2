<div class="container">

  <h2 class="mb-3">パスワードを変更します</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-3", placeholder: "新しいパスワード（6文字以上）" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3", placeholder: "パスワード（確認）" %>
    </div>

    <div class="actions">
      <%= f.submit "変更を登録", class: "btn btn-primary w-100" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>

</div>